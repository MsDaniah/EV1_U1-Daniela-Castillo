@model IEnumerable<EV1U1.Models.Servicio>

@{
    ViewData["Title"] = "Index";
}

<h1>Servicios</h1>

<p>
    <a asp-action="Create">Crear nuevo Servicio</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duracion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duracion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idservicios">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Idservicios">Ver</a> |
                <a asp-action="Delete" asp-route-id="@item.Idservicios">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
